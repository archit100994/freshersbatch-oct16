package oct19;

import java.lang.reflect.*;

public class Middleware
{

	public static Object invokeMethod(String className, String methodName, Class [] paramType, Object paramvalues[])
	{
		Class c= Class.forName(className);
		Method m= c.getMethod(methodName, paramType);
		return m.invoke(c.newInstance(), paramvalues)
	}
	
	public static void main(String[] args)
	{
		// TODO Auto-generated method stub
		Class paramType[]= new Class;
		Object paramvalues[]= new Object;
		
	}

}
